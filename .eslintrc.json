{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true
  },
  // 使用airbnb校验规则
  "extends": "airbnb",
  "rules": {
    // 结尾不允许使用分号
    "semi": [2, "never"],
    // 箭头函数直接返回的时候不需要 大括号 {}
    "arrow-body-style": [2, "as-needed"],
    // 允许windows开发环境
    "linebreak-style": [0, "error", "windows"],
    // 限制单行的表达式数量
    "react/jsx-one-expression-per-line": 0,
    // 多行jsx需要写在（）中
    "react/jsx-wrap-multilines": [2],
    // 引用时候根据根目录基础
    "import/no-unresolved": 0,
    // 限制可使用jsx的文件扩展名
    "react/jsx-filename-extension": [
      2,
      { "extensions": [".js", ".jsx", ".tsx"] }
    ],
    // 允许使用全局变量
    "global-require": 0,
    // 允许在只有一个参数时省略parens
    "arrow-parens": [2, "as-needed"],
    // 关闭prop-types
    "react/prop-types": 0,
    // return语句总是或永远不指定值
    "consistent-return": 0,
    // 此规则在对象文字或解构赋值的大括号内强制执行一致的换行符。
    "object-curly-newline": 0
  }
}
